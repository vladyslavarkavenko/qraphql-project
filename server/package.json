{
  "name": "server",
  "license": "ISC",
  "version": "1.0.0",
  "main": "build/main.js",
  "author": "V.V.Arkavenko",
  "description": "GraphQl server for authorization",
  "scripts": {
    "start": "run-s clean build up",
    "dev:start": "run-s clean && run-p dev:build dev:up",
    "build": "webpack --mode production",
    "dev:build": "webpack -w --mode development",
    "up": "node",
    "dev:up": "nodemon --inspect",
    "clean": "rm -rf build || rmdir /s /q build",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-datasource": "^0.1.3",
    "apollo-server": "2.14.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^6.2.0",
    "graphql": "^14.5.8",
    "jsonwebtoken": "^8.5.1",
    "node": "^13.3.0",
    "sequelize": "^5.21.2",
    "sqlite3": "^4.1.1",
    "@babel/core": "^7.7.4",
    "babel-loader": "^8.0.6",
    "raw-loader": "^4.0.0",
    "webpack": "^4.41.2",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-loader": "^3.0.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "webpack-cli": "^3.3.10"
  }
}
